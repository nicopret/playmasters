{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/packages/types",
    "declaration": true,
    "emitDeclarationOnly": false,
    "types": ["node"],
    "paths": {
      "@playmasters/game-sdk": ["packages/games-sdk/src/index.ts"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.json"],
  "exclude": [
    "jest.config.ts",
    "jest.config.cts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ],
  "references": [
    {
      "path": "../games-sdk/tsconfig.lib.json"
    }
  ]
}
